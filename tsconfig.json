{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],

    "target": "esnext",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", "type.d.ts", "node_modules/react-native-vector-icons/**/*"],
  "exclude": ["node_modules", "package-lock.json", ".yarn"],
  "extends": "@tsconfig/react-native/tsconfig.json",
  "paths": {
    "crypto": ["node_modules/crypto"]
  }
}
